---
import '@/styles/global.css'
import '@fontsource-variable/josefin-sans'
import '@fontsource-variable/montserrat'
const { title = 'Ephemera Time - En tus momentos mas especiales' } = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: auto;
  }
  main {
    max-width: 1440px;
    margin: 0 auto;
  }
</style>
